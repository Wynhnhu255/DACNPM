<% extend("../app.ejs") %>
    <section class="detail-nav">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <div class="menu-title text-decoration-none">
                            <a href="/" class="text-decoration-none">
                                <img class="menu-nav" src="/images/background/smile.png" alt="logo ảnh">
                                <span class="text-decoration-none"><b>Doctors care</b></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-8 d-flex flex-row justify-content-center align-self-center menu-type">
                        <span class="d-block"><a href="/" class="text-decoration-none"><b>Trang chủ</b></a></span>
                        <span class="d-block mx-5"><a href="/for-patients" class="text-decoration-none"><b>Dành cho bệnh
                                    nhân</b></a></span>
                        <span class="d-block"><a href="/for-doctors" class="text-decoration-none"><b>Dành cho bác
                                    sĩ</b></a></span>
                    </div>
                    <div class="col-2 d-flex justify-content-center align-items-center">
                        <span><a href="https://www.facebook.com/profile.php?id=61575172705823" target="_blank"
                                class="text-decoration-none"><b>Cần hỗ trợ?</b></a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="detail-info-specialization">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-12 mt-3">
                        <a class="text-decoration-none" href="/"><b>Trang chủ</b></a><span
                            aria-hidden="true">&raquo;</span>
                        <span style="text-transform: uppercase">
                            Gửi phản hồi
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="detail-info-clinic mt-3">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-8 mx-auto">
                        <h2>Gửi phản hồi sau khi khám bệnh</h2>
                        <hr>
                        <div>
                            Phản hồi của bạn sẽ giúp người khác dễ dàng lựa chọn bác sĩ phù hợp hơn.
                        </div>
                        <div class="mt-2">
                            Vui lòng gửi nhận xét về bác sĩ sau khi khám: <%= doctor.name %>
                        </div>
                        <form id="formFeedBack">
                            <div class="form-row mt-4">
                                <div class="col">
                                    <label for="feedbackName">Họ và tên</label>
                                    <input class="form-control" name="feedbackName" id="feedbackName" type="text"
                                        placeholder="Họ và tên (bắt buộc)">
                                </div>
                                <div class="col">
                                    <label for="feedbackPhone">Số điện thoại</label>
                                    <input class="form-control" name="feedbackPhone" id="feedbackPhone" type="text"
                                        placeholder="Số điện thoại (bắt buộc)">
                                </div>
                            </div>
                            <div class="form-group mt-2">
                                <label for="feedbackContent">Nội dung</label>
                                <textarea class="form-control" name="feedbackContent" id="feedbackContent"
                                    type="text"></textarea>
                            </div>
                            <div class="mb-4">
                                <button type="button" class="btn btn-primary" data-doctor-id="<%= doctor.id %>"
                                    id="sendFeedback">Gửi</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>