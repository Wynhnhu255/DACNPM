<% extend("../app.ejs") %>
    <section class="detail-nav">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-2">
                        <div class="menu-title text-decoration-none">
                            <a href="/" class="text-decoration-none">
                                <img class="menu-nav" src="/images/background/smile.png" alt="logo ảnh">
                                <span class="text-decoration-none"><b>Doctors care</b></span>
                            </a>
                        </div>
                    </div>
                    <div class="col-8 d-flex flex-row justify-content-center align-self-center menu-type">
                        <span class="d-block"><a href="/" class="text-decoration-none"><b>Trang chủ</b></a></span>
                        <span class="d-block mx-5"><a href="/for-patients" class="text-decoration-none"><b>Dành cho bệnh
                                    nhân</b></a></span>
                        <span class="d-block"><a href="/for-doctors" class="text-decoration-none"><b>Dành cho bác
                                    sĩ</b></a></span>
                    </div>
                    <div class="col-2 d-flex justify-content-center align-items-center">
                        <span><a href="https://www.facebook.com/ho.tam.535127" target="_blank"
                                class="text-decoration-none"><b>Cần hỗ trợ?</b></a></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="detail-info-specialization">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-12 mt-3">
                        <a class="text-decoration-none" href="/"><b>Trang chủ </b></a><span
                            aria-hidden="true">&raquo;</span>
                        <span style="text-transform: uppercase">
                            <a href="/all-posts" class="text-decoration-none">Danh sách bài đăng</a> <span
                                aria-hidden="true">&raquo;</span>
                        </span>
                        <span style="text-transform: uppercase">Tìm kiếm</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="detail-all-posts mt-3">
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-8 ">
                        <h2></h2>
                        <hr>
                        <div id="list-posts-client-search-page">
                            <span class="d-block m-3">Showing results for <b>"<%= search %>" :</b> </span>
                            <% if(posts.length===0){%>
                                <div class="m-3" style="font-weight: 600">No results were found</div>
                                <%}%>
                                    <% posts.forEach(function(post) { %>
                                        <a class="text-decoration-none" href="/detail/post/<%= post._source.postId %>">
                                            <div class=" mb-5 d-flex flex-row">
                                                <div class="img-post col-4">
                                                    <img
                                                        src="https://thietbikythuat.com.vn/wp-content/uploads/2021/01/linh-vuc-y-te-768x534.jpg">
                                                </div>
                                                <div class="col-8 d-flex flex-column">
                                                    <h3 class="show-title-post">
                                                        <%= post._source.title %>
                                                    </h3>
                                                    <div class="show-content-post" style="color: black">
                                                        <%- post.highlight.content %>
                                                    </div>
                                                </div>
                                            </div>
                                        </a>
                                        <% }) %>
                        </div>

                    </div>
                    <div class="col-4 mt-3">
                        <input type="text" class="form-control" id="searchPostInSearchPageClient"
                            placeholder="Search for posts...">
                    </div>
                </div>
            </div>
        </div>
    </section>